@using WhoWorksHere.Models
@model List<Employee>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">FirstName</th>
            <th scope="col">LastName</th>
            <th scope="col">Address</th>
            <th scope="col">Department</th>
            <th scope="col">Delete</th>
            <th scope="col">Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th scope="row">@item.Id</th>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.Address</td>
            <td>@item.Department.DepartmentName</td>
            <td><a asp-controller="Home" asp-action="DeleteDepartment" asp-route-id="@item.Id" class="btn alert-danger">Delete</a></td>
            <td><a asp-controller="Home" asp-action="DeleteDepartment" asp-route-id="@item.Id" class="btn alert-success">Update</a></td>
        </tr>
        }
    </tbody>
</table>

<a asp-controller="Employee" asp-action="AddEmployee" class="btn alert-primary">Add New Employee</a>